# AWorld MAS Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration (Required)
# =============================================================================

# LLM Provider (openai, anthropic, etc.)
LLM_PROVIDER=openai

# Model name
LLM_MODEL_NAME=gpt-4o

# API Key (REQUIRED - get from your provider)
LLM_API_KEY=your_api_key_here

# API Base URL (optional, for custom endpoints)
LLM_BASE_URL=https://api.openai.com/v1

# Temperature (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.0

# =============================================================================
# Dataset Configuration
# =============================================================================

# Path to GAIA dataset (download from https://huggingface.co/datasets/gaia-benchmark/GAIA)
GAIA_DATASET_PATH=./gaia_dataset

# Path to IMO dataset (if using IMO examples)
IMO_DATASET_PATH=./imo_dataset

# =============================================================================
# Workspace Configuration
# =============================================================================

# Directory for logs and output files
AWORLD_WORKSPACE=./test_output

# =============================================================================
# MCP Server Configuration (Optional - for tool usage)
# =============================================================================

# Google Search
GOOGLE_API_KEY=your_google_api_key
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id

# OSS (Object Storage Service) for screenshots/files
OSS_ENDPOINT=your_oss_endpoint
OSS_ACCESS_KEY_ID=your_oss_key_id
OSS_ACCESS_KEY_SECRET=your_oss_secret
OSS_BUCKET=your_bucket_name

# E2B (Code execution environment)
E2B_API_KEY=your_e2b_api_key

